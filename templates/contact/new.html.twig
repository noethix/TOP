{% extends 'base.html.twig' %}

{% block title %}Contact Us{% endblock %}


{% block stylesheets %}

<link rel="stylesheet" href="{{asset('../public/CSS/base.css')}}">

{% endblock %}


{% block body %}

{% for flash_message in app.session.flashbag.get('notice') %}
<div class="alert alert-success alert-dismissible fade show" role="alert">
        {{ flash_message }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
         <span aria-hidden="true">&times;</span>
        </button>
        </div> 
{% endfor %}


<h1 class="headers headers-contact headers-contact-top">If you are in crisis or homeless please see our <a href="{{ path ('help') }}">Need Help? </a>page for more information.</h1>

<h2 class="warning headers-contact">We do not let press / students / researchers into our shelter. Please be respectful and do not ask.</h2>

<h1 class="headers headers-contact">Get in touch!</h1>

    {{ include('contact/_form.html.twig') }}

{% endblock %}
